root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,yml,yaml,toml,json}]
indent_size = 2

# Tabs required for <<-EOF heredoc indent stripping
[{*.sh,install}]
indent_style = tab
shell_variant = bash
binary_next_line = true
switch_case_indent = true

[justfile]
indent_size = 4
